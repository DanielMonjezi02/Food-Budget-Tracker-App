<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateProduct"
    android:background="@color/backgroundcolour">


    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#28282B"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_arrow"
            android:background="@drawable/transparent_background"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/addProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/check"
            android:background="@drawable/transparent_background"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:tint="@color/white"/>

        <TextView
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Product"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/backButton"
            android:layout_toStartOf="@id/addProduct" />

    </RelativeLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/productNameTextView"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:hint="Enter product name"
        android:textColorHint="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBar" />

    <View
        android:id="@+id/bar"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="115dp"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/productNameTextView"/>

    <LinearLayout
        android:id="@+id/priceRow"
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/priceText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45sp"
            android:text="Price"
            android:gravity="left|center"
            android:textSize="20sp"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/priceEdit"
            android:layout_width="35dp"
            android:layout_height="45sp"
            android:layout_weight="0.25"
            android:gravity="right|center"
            android:inputType="numberDecimal"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/edittext_background" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/categoryRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@id/priceRow"
        app:layout_constraintEnd_toEndOf="parent">


        <TextView
            android:id="@+id/categoryText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45sp"
            android:text="Category"
            android:gravity="left|center"
            android:textSize="20sp"
            android:textColor="@color/white"/>

        <Spinner
            android:id="@+id/categoryDropdown"
            android:layout_width="0dp"
            android:layout_height="45sp"
            android:layout_weight="0.4"
            android:gravity="right|center"
            android:inputType="numberDecimal"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/edittext_background" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/storeRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@id/categoryRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <TextView
            android:id="@+id/storeName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45sp"
            android:text="Store Name"
            android:gravity="left|center"
            android:textSize="20sp"
            android:textColor="@color/white"/>

        <Spinner
            android:id="@+id/storeNameDropdown"
            android:layout_width="0dp"
            android:layout_height="45sp"
            android:layout_weight="0.5"
            android:gravity="right|center"
            android:inputType="numberDecimal"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/edittext_background" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dateRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@id/storeRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <TextView
            android:id="@+id/dateText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45sp"
            android:text="Date"
            android:gravity="left|center"
            android:textSize="20sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/dateEdit"
            android:layout_width="0dp"
            android:layout_height="45sp"
            android:layout_weight="0.6"
            android:gravity="right|center"
            android:inputType="date"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/edittext_background" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/shoppingListRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@id/dateRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <TextView
            android:id="@+id/shoppingListText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45sp"
            android:text="Shopping List Item"
            android:gravity="left|center"
            android:textSize="20sp"
            android:textColor="@color/white"/>

        <Spinner
            android:id="@+id/shoppingListDropdown"
            android:layout_width="0dp"
            android:layout_height="45sp"
            android:layout_weight="0.7"
            android:gravity="right|center"
            android:inputType="numberDecimal"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/edittext_background" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>